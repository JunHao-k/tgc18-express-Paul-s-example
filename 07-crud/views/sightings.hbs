{{#extends 'base'}}

{{#block 'content'}}
<h1>Food Sightings</h1>
<a href="/food_sighting/create" class="btn btn-primary">Add New Sighting</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Food</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>

    <!-- 
        The two buttons, edit and delete are created each time the loop goes over each food item 
        in the for-loop. There will be a specific link tied to each button when the are created for
        each food item that will immediately go to a website with the given domain:
        /food_sighting/edit/{{this._id}}, Upon reaching the domain, a Get request will be triggered.
    -->
    
    {{#each foodSightings}}
    <tr>
        <td>{{this._id}}</td>
        <td>{{this.description}}</td>
        <td>{{this.food}}</td>
        <td>{{this.datetime}}</td>
        <td>
            <a href="/food_sighting/edit/{{this._id}}"  class="btn btn-primary btn-sm">Edit</a>
            <a href="/food_sighting/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
        </td>

    </tr>
    {{/each}}

</table>

{{/block}}

{{/extends}}